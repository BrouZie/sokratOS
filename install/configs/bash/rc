# Path to bash-configs
BASHCFG="$HOME/.config/bash"

[[ -f "$BASHCFG/envs" ]] && source "$BASHCFG/envs"

# Runs only in interactive shell
[[ $- == *i* ]] || return
[[ -f "$BASHCFG/shell" ]] && source "$BASHCFG/shell"
[[ -f "$BASHCFG/init" ]] && source "$BASHCFG/init"
[[ -f "$BASHCFG/aliases" ]] && source "$BASHCFG/aliases"
[[ -f "$BASHCFG/prompt" ]] && source "$BASHCFG/prompt"

# Readline config
bind -f "$BASHCFG/inputrc"

#!/usr/bin/env bash

# Script to select wallpaper from a directory and apply it using sokratos-apply-theme

# Directory containing wallpapers
WALL_DIR="$HOME/Pictures/wallpaper"

# Current directory (to cd back to)
CWD="$(pwd)"

cd "$WALL_DIR" || exit

# Handle spaces in filenames
IFS=$'\n'

# Grab the user-selected wallpaper
SELECTED_WALL=$(for a in *.jpg *.png *.jpeg; do echo -en "$a\0icon\x1f$a\n" ; done | rofi -dmenu -p "")

# If not empty, pass to walset-backend
if [ -n "$SELECTED_WALL" ]; then
    sokratos-apply-theme "$SELECTED_WALL"
fi
